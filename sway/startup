# Startup Applications
xwayland force

# autotiling
exec --no-startup-id autotiling

# exec dunst to show notifications
exec_always --no-startup-id dunst &

# wallpaper
exec --no-startup-id waypaper --restore
# exec --no-startup-id variety --restore
exec_always --no-startup-id swaybg -i ~/Pictures/Wallpapers/Wallpaper.jpg

exec_always --no-startup-id ~/.config/sway/scripts/lock.sh

# script to detect another monitors
exec --no-startup-id ~/.config/i3/monitors.sh

input type:keyboard {
    xkb_layout latam
  }
input type:touchpad {
    tap enabled
    natural_scroll enabled
    dwt enabled
    middle_emulation enabled
    scroll_method two_finger
    click_method clickfinger
}
# Change wallpaper every 5 minutes
# exec bash -c 'while true; do ~/.config/sway/scripts/random-wallpaper.sh; sleep 300; done'

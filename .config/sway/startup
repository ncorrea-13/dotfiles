# Startup Applications
xwayland force

# This is for default apps
exec_always XDG_MENU_PREFIX=plasma- kbuildsycoca6

# autotiling
exec --no-startup-id autotiling

# exec dunst to show notifications
exec_always --no-startup-id dunst

# kdeconnectd
exec --no-startup-id kdeconnectd

# sway fader for smooth transitions
exec_always --no-startup-id sway-fader -d 100ms

# wallpaper
exec_always --no-startup-id swaybg -i ~/Pictures/Wallpapers/Wallpaper.jpg -m fill

# little script to lock the screen
exec_always --no-startup-id ~/.config/sway/scripts/lock.sh

input type:keyboard {
    xkb_layout latam
  }
input type:touchpad {
    tap enabled
    natural_scroll enabled
    dwt enabled
    middle_emulation enabled
    scroll_method two_finger
    click_method clickfinger
}
# Change wallpaper every 5 minutes
# exec bash -c 'while true; do ~/.config/sway/scripts/random-wallpaper.sh; sleep 300; done'
